{
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "target": "es6",
        "outDir": "out",
        "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "inlineSources": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "jest.config.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
