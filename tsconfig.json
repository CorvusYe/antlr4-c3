{
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "target": "ES2022",
        "moduleResolution": "node",
        "outDir": "lib",
        "rootDir": ".",
        "removeComments": false,
        "noImplicitAny": true,
        "noImplicitOverride": false, // because antlr4ts doesn't support it
        "sourceMap": true,
        "inlineSources": true,
        "isolatedModules": false, // because of imported const enums in antlr4ts
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": false,
        "strictNullChecks": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "lib/**/*",
        "tests/**/*"
    ]
}
